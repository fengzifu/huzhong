  flex-wrap: nowrap;
  flex-direction: column;
  align-items:center;
  width: 100%;
  height: auto;
  border-top: 8px solid rgb(230, 228, 228);
  border-bottom: 8px solid  rgb(230, 228, 228);
  background-color: rgb(245, 244, 244);
}

