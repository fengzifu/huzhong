.status-item{
  background-color: white;
  border-top: 10px solid #eee;
  border-bottom: 10px solid #eee;
}

.status-item-title {
  width: 100%;
  border-bottom: 1px solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.title-name{
  font-size: 30rpx;
  color: black;
}

.title-flag{
  padding-right: 60rpx;
  color: #7e7e77e1;
}

.status-item-detail {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 40rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.status-item-detail-status{
  font-size: 30rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
}

.status-item-detail-date{
  font-size: 30rpx;
  color: #7e7e77e1;
  height: 60rpx;
  line-height: 50rpx;
}

.status-item-price{
  padding-right: 60rpx;
}

.status-item-detail-item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}